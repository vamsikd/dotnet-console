<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.0.0</Version> <!-- This is the package version (NuGet or DLL version) -->
    <AssemblyVersion>1.0.0</AssemblyVersion> <!-- This is the assembly version -->
    <FileVersion>1.0.0.0</FileVersion> <!-- This is the file version of the DLL -->
    <InformationalVersion>1.0.0-beta</InformationalVersion> <!-- Optional: Additional version metadata -->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
     <None Update="appsettings.json">
    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
  </None>
  </ItemGroup>

   <ItemGroup>
     <None Update="appsettings.Development.json">
    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
  </None>
  </ItemGroup>

</Project>
